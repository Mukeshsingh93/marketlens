<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Noactionbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Widget.Normal.AppTextView" parent="Widget.AppCompat.TextView">    
        <item name="android:layout_width">wrap_content</item>   
        <item name="android:layout_height">wrap_content</item>   
        <item name="android:textSize">@dimen/textsize_fourteen</item>   
        <item name="android:fontFamily">@font/regular</item>    
    </style>


    <style name="radio" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">@dimen/textsize_fourteen</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:buttonTint">@color/pink</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light">    
        <item name="android:windowFrame">@null</item>   
        <item name="android:windowBackground">@android:color/transparent</item>   
        <item name="android:windowIsFloating">true</item>   
        <item name="android:windowContentOverlay">@null</item>    
        <item name="android:windowTitleStyle">@null</item>    
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>  
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>  
        <item name="android:backgroundDimEnabled">true</item>   
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Menu.AppTextView" parent="Widget.AppCompat.TextView">    
        <item name="android:layout_width">wrap_content</item>   
        <item name="android:layout_height">wrap_content</item>   
        <item name="android:textSize">@dimen/textsize_twl</item>   
        <item name="android:textColor">@color/blacktext</item>   
        <item name="android:fontFamily">@font/regular</item>   
        <item name="android:gravity">center</item> 
        <item name="android:layout_marginTop">@dimen/fifteen</item>    
        <item name="android:drawablePadding">@dimen/fifteen</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>