<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/thirty"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/logo_bg"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/forgetpasswordss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entermobileno"
                app:layout_constraintTop_toBottomOf="@+id/imageview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/blacktext"
                android:textSize="@dimen/textsize_twoentyeight"
                android:layout_marginTop="@dimen/twoenty"
                app:fontFamily="@font/regular"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/mobile_edittxt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/forgetpasswordss"
                android:hint="@string/mobileno"
                android:inputType="text"
                android:layout_marginTop="@dimen/twoenty"
                android:maxLength="40"
                android:padding="@dimen/ten"
                android:textSize="@dimen/textsize_fourteen"
                android:fontFamily="@font/regular"
                android:background="@drawable/square_box"
                android:textColor="@color/blacktext"
                />




            <RelativeLayout
                android:id="@+id/signupbtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/twoenty"
                android:background="@drawable/loginbtn_bg"
                app:layout_constraintTop_toBottomOf="@+id/mobile_edittxt"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Normal.AppTextView"
                    android:layout_centerInParent="true"
                    android:text="@string/signup"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_sixteen" />

            </RelativeLayout>













        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>